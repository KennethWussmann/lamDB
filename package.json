{
  "name": "lamdb",
  "version": "0.1.0",
  "description": "",
  "keywords": [],
  "author": "Kenneth Wu√ümann",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "DETECT_PLATFORM=1 npm run build && npx turbo run dev",
    "deploy": "npx turbo run deploy",
    "build": "npx turbo run build",
    "codegen": "npx turbo run codegen",
    "test": "npx turbo run test",
    "clean": "rm -rf ./build && npx turbo run clean",
    "publish": "npm run build && npm run replace-wildcard-versions && npx changeset publish",
    "ci": "rome ci . && npm run test",
    "format": "rome format --write .",
    "check": "rome check .",
    "check:fix": "rome check --apply-suggested .",
    "dependency-update": "npm-check-updates -u --filterVersion \"/^[~^<>]| - |\\.x$/\" && for i in packages/*/package.json ; do npm-check-updates -u --packageFile $i --filterVersion \"/^[~^<>]| - |\\.x$/\"; done && npm install",
    "replace-wildcard-versions": "npx ts-node scripts/replace-wildcard-versions.ts",
    "prepare": "husky install"
  },
  "repository": "https://github.com/KennethWussmann/lamDB",
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.ts": "rome check --apply-suggested .",
    "*.{ts,json,yml,yaml,html,md}": "rome check --apply-suggested ."
  },
  "engines": {
    "node": "16",
    "npm": "8"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.2",
    "@types/jest": "^29.2.2",
    "@types/node": "16",
    "@vercel/ncc": "^0.34.0",
    "globby": "11.1.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-mock-extended": "^3.0.1",
    "lint-staged": "^13",
    "npm-check-updates": "^16.3.22",
    "rome": "^10.0.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "turbo": "^1.6.3",
    "typescript": "^4.8.4"
  }
}
