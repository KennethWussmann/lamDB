{
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "ignore": [
      "**/node_modules/*",
      "**/*.d.ts",
      "**/dist/*",
      "**/build/*",
      "**/.turbo/*",
      "**/cdk.out/*"
    ]
  },
  "formatter": {
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 160,
    "ignore": [
      "**/node_modules/*",
      "**/*.d.ts",
      "**/dist/*",
      "**/build/*",
      "**/.turbo/*",
      "**/cdk.out/*"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
